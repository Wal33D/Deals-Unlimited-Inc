<style>

#showpagecontainer{
margin-top:0!important;
}
#status-container #vehicle_price{
border:1px solid black!important;
}
input .integer .optional .vehicle_price{
	height:100%!important;
}
#vehicle_price{
	margin:0!important;
}
#form{margin-top: 0!important;}
#panel-edit{margin-bottom:0!important;}
#panel-status{margin-bottom:0!important;}
#panel-status h5{color:white!important;}
#forsale-btn{padding-top:0!important;}
@media only screen and (max-width : 800px) {
#status-container{margin-top: 5vmin!important;}
#panel-title{
	padding:0!important;
	margin:0!important;
}
#panel-title h5{
	color:white!important;
	padding:0!important;
	margin:0!important;
}
}
</style>
<div class="container" id="stat-container" >
	<div class="row" id="status-container">
		<div class="panel panel-default z-depth-4" id ="panel-status">
			<% if @vehicle.status == ("Sale" || "sale") %>
			<div class="panel-heading green">
				<div class="panel-title" id = "panel-title">
					<h5>For Sale</h5>
				</div>
			</div>
			<% elsif @vehicle.status == ("Sold" || "sold") %>
			<div class="panel-heading red">
				<div class="panel-title">
					<h5>Sold</h5>
				</div>
			</div>
			<% else %>
			<div class="panel-heading blue">
				<div class="panel-title">
					<h5>Pending</h5>
				</div>
			</div>
			<% end %>
			<div class="panel-body" style="padding-bottom:0!important;">
				<div class="row" style="margin:0!important;">
					<div class="col-sm-5">
						<table class="table">
							<tr>
								<td style="padding:1vmin!important;">
									Vehicle Created at:
								</td>
								<td style="padding:1vmin!important; color:#777;">
									<%= @vehicle.created_at %>
								</td>
							</tr>
							<tr>
								<td style="padding:1vmin!important;">
									Last Edited on:
								</td>
								<td style="padding:1vmin!important; color:#777;">
									<%= @vehicle.updated_at %>
								</td>
							</tr>
							<%= simple_form_for(@vehicle) do |f| %>
							<tr>
								<td style="padding:1vmin!important;" >
									<div class="input-group" >
										<span class="input-group-addon">$</span>
										<%= f.input :price , :class=>"form-control", :type=>"text", label: false%>
										<span class="input-group-addon">.00</span>
									</div>
								</td>
								<td style="padding:1vmin!important;"><%= f.button :submit ,:class=>"blue z-depth-2 ", :value=>"Update $",:style=>"height:100%!important; width:100%!important; background-color:#5383D3!important; color:white!important; font-weight:bold!important;	 "%></td>
							</tr>
							<% end %>
						</table>
					</div>
					<div class="col-sm-3">
					</div>
					<div class="col-sm-3" style="height:100%!important; padding-bottom:0!important;" >
						<table style="margin-top:0!important;">
							<tr>
								<td id = "forsale-btn" style="padding:1vmin!important;">
									<button class="btn btn-default green z-depth-3 waves-effect waves-white " onclick = "setstatus('For Sale')"style="font-weight:bold!important; width:100%!important;" >For Sale</button>
								</td>
							</tr>
							<tr>
								<td id="forsale-btn" style="padding:1vmin!important;">
									<button class="btn btn-default blue z-depth-3 waves-effect waves-white" onclick = "setstatus('Pending')"style="font-weight:bold!important; width:100%!important;">Pending</button>
								</td>
							</tr>
							<tr>
								<td id="forsale-btn" style="padding:1vmin!important;">
									<button class="btn btn-default red z-depth-3 waves-effect waves-white" onclick = "setstatus('Sold')"style="font-weight:bold!important; width:100%!important;">Sold</button>
								</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
			<% if @vehicle.status == ("Sale" || "sale") %>
			<div class="panel-footer green">
			</div>
			<% elsif @vehicle.status == ("Sold" || "sold") %>
			<div class="panel-footer red">
			</div>
			<% else %>
			<div class="panel-footer blue">
			</div>
			<% end %>
		</div>
	</div>
</div>
<div style="display:none!important;">
	<%= simple_form_for(@vehicle) do |f| %>
	<%= f.input :price %>
	<%= f.input :status %>
	<button id= "update"%>Submit Vehicle</button>
</div>
<% end %>