<div class="container" id="stat-container">
	<div class="row v_margin" id="status-container">
		<div class="col-xs-12">
			<div class="panel panel-default z-depth-3" id ="edit_panel_status">
				<%=@status_head.html_safe%>
				<button class="btn" id="shrink_edit_panel" style="background:none; font-size:1.64rem; padding-right:2px; margin:0 0 0 0; float:right; color:white; box-shadow:none;" onclick="$('#edit_panel_body').slideToggle();"><span class="glyphicon glyphicon-resize-full" aria-hidden="true"></span></button>
				<div class="panel-title" id = "panel-title"><h5 class="v_margin" id="phrase"><%=@status_phrase%></h5></div></div>
				<div class="panel-body no_padding"  id="edit_panel_body" style="padding-bottom:0!important;">
					<div class="row v_margin" >
						<div class="col-sm-4">
							<table class="table edit_panel_table" style="margin-bottom:0px!important; margin-top:1.5vmin!important;">
								<tr>
									<td style="padding:1vmin!important;">
										Total Views:
									</td>
									<td style="padding:1vmin!important; color:#777;">
										<%= @vehicle.countclicks %>
									</td>
								</tr>
								<tr>
									<td style="padding:1vmin!important;">
										Days Old:
									</td>
									<td style="padding:1vmin!important; color:#777;">
										<%= ((DateTime.now.to_date)-(@vehicle.created_at.to_date)).to_i %>
									</td>
								</tr>
								<tr>
									<td style="padding:1vmin!important;">
										Vehicle Created on:
									</td>
									<td style="padding:1vmin!important; color:#777;">
										<%= @vehicle.created_at.to_date %>
									</td>
								</tr>
								<tr>
									<td style="padding:1vmin!important;">
										Last Updated on:
									</td>
									<td style="padding:1vmin!important; color:#777;">
										<%= @vehicle.updated_at.to_date %>
									</td>
								</tr>
							</table>
						</div>
						<%= link_to 'Update Price', {:controller => "admin", :action => "set_price", :vehicle => @vehicle.id }, :remote => true, :class => 'btn edit_price_btn',:style=>"display:none;" %>
						<div class="col-sm-4">
							<table>
								<%= simple_form_for @vehicle, :remote => true do |s| %>
								<tr>
									<td style="padding:1vmin!important;" >
										<div class="input-group price_flash" >
											<span class="input-group-addon">$</span>
											<%= s.input :price , :class=>"form-control no-border", :type=>"text", label: false%>
											<span class="input-group-addon">.00</span>
										</div>
									</td>
								</tr>
								<tr><td><hr class="seperator"></td></tr>
								<tr>
									<td >
										
										<button type="submit" class="btn btn-default z-depth-2 waves-effect" value="$ Update Price" style="height:100%!important; width:100%!important; background-color:#5383D3!important; color:white!important; font-weight:bold!important;" onclick="$('.edit_price_btn').click();" %>
										Update $
										</button>
									</td>
								</tr>
								<% end %>
							</table>
						</div>
						<div class="col-sm-4" style="height:100%!important; padding-bottom:0!important;" >
							<table class="table"style="margin-bottom:0px!important; margin-top:1.5vmin!important;">
								<tr>
									<td >
										
										<%= link_to 'Edit', {:controller => "admin", :action => "edit_form", :vehicle => @vehicle.id }, :remote => true,:type=>"button", :class =>'btn white btn waves-effect ',:style=>"width:100%; color:black;",:id=>"btn-edit" %>
										
									</td>
									<td id = "forsale-btn-td">
										<%= link_to 'Sale', {:controller => "admin", :action => "set_sale", :vehicle => @vehicle.id }, :remote => true,:type=>"button", :class => 'btn edit_sale_btn btn waves-effect ',:style=>" width:100%; background-color:rgba(0, 230, 118, 1)!important; font-weight:bold!important; ",:id=>"forsale-btn-edit" %>
									</td>
								</tr>
								<tr>
									<td>
										<%= link_to 'Delete', @vehicle, method: :delete, data: { confirm: 'Are you sure?' },:style=>"width:100%; color:black; ", :class=>"btn white btn-default z-depth-1 btn waves-effect waves-red"%>
										
									</td>
									<td id="pending-btn-td" >
										<%= link_to 'Pending', {:controller => "admin", :action => "set_pending", :vehicle => @vehicle.id }, :remote => true, :class => 'btn edit_pending_btn btn waves-effect ',:style=>"background-color:#5383d3 !important;width:100%; font-weight:bold!important; " %>
									</td>
								</tr>
								<tr>
									<td>
										<button onclick="window.history.back();"style="width:100%; color:black;" class=" btn btn-default white z-depth-1 btn waves-effect waves-orange">Back</button>
									</td>
									<td id="sold-btn-td" >
										<%= link_to 'Sold', {:controller => "admin", :action => "set_sold", :vehicle => @vehicle.id }, :remote => true, :class => 'btn red edit_sold_btn btn waves-effect ', :style =>"width:100%; font-weight:bold!important; " %>
									</td>
								</tr>
							</table>
						</div>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>