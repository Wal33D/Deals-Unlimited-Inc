<% if admin_signed_in? %>
<div class ="container" id="form">
    <div class = "row">
        <%= simple_form_for(@vehicle) do |f| %>
        <%= f.error_notification %>
        <div class = "col-lg-6">
            <div class = "panel panel-default z-depth-4">
                <div class = "panel-heading" style="background-color:#292c2f !important">
                    <div class = "panel-title">
                        <h5 style="color:#eee">Vehicle Info
                        <button class="btn waves-effect waves-teal" type="button"style="float:right; font-weight:bold; background-color:#5383D3;" onclick="VIN_O_Matic(document.getElementById('vehicle_vin_num').value);" >Fill with VIN</button>
                        <button class="btn waves-effect waves-yellow" type="button"style="float:right; font-weight:bold; background-color:#ffab40!important;  margin-right:1vmin;"  onclick="highlight(0);"id="highlight_button">Highlight Emptys</button>
                        </h5>
                    </div>
                </div>
                <div class = "panel-body">
                    <div class="form-inputs">
                        <table class="table">
                            <tr>
                                <td class="featurelabel">VIN:</td>
                                <td><%= f.input :vin_num %></td>
                            </tr>
                            <tr>
                                <td class="featurelabel">Price:</td>
                                <td><%= f.input :price %></td>
                            </tr>
                            <tr>
                                <td class="featurelabel">Mileage:</td>
                                <td><%= f.input :mileage %></td>
                            </tr>
                            <tr>
                                <td class="featurelabel">Exterior Color</td>
                                <td><%= f.input :exterior_color %></td>
                            </tr>
                            <tr>
                                <td class="featurelabel">Interior Color</td>
                                <td><%= f.input :interior_color %></td>
                            </tr>
                            <tr>
                                <td class="featurelabel">Stereo</td>
                                <td><%= f.input :stereo %></td>
                            </tr>
                            <tr>
                                <td class="featurelabel">Stock Number</td>
                                <td><%= f.input :stock_number %></td>
                            </tr>
                            <tr>
                                <td class="featurelabel" colspan="2">Description</td>
                            </tr>
                            <tr>
                                <td colspan="2"><%= f.input :description , as: :text,:id=>"descr", :placeholder=>"Description..."%></td>
                            </tr>
                            <tr>
                                <td><%= f.input :other_options, :id=>"other_options" %></td>
                            </tr>
                            <tr>
                                <td colspan="2" >
                                <hr><%= render "feature_list" %></td>
                            </tr>
                            <tr>
                                <td colspan="2" id="accept-div">
                                    <button onclick="acceptFeatures();" class="btn teal btn waves-effect waves-teal" id="accept" type="button" style="width:100%!important; font-weight:bold;">Accept/Edit Options</button>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2"> <%= f.label :vehicle_images %></td>
                            </tr>
                            <tr>
                                <td colspan="2"><%= f.file_field :vehicle_images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" ,:style=>"display:none!important;",  :id=>"img-btn"%></td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <hr>
                                    <button type="button" onclick="document.getElementById('img-btn').click();"  class="btn waves-effect waves-white" type="button"style="float:right; background-color:#5383D3; width:100%!important; font-weight:bold;">Select Images</button>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class = "panel-footer">
                </div>
            </div>
        </div>
        <div class = "col-lg-6">
            <div class = "panel panel-default z-depth-4 ">
                <div class = "panel-heading"  style="background-color:#292c2f !important">
                    <div class = "panel-title">
                        <h5 style="background-color:#292c2f;">.</h5>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <tr><td class="featurelabel">Vehicle Type</td>
                        <td> <%= f.input :kind, collection: [:Car, :Truck, :SUV, :Van]%></td></tr>
                        <tr><td class="featurelabel">Status</td>
                        <td><%= f.input :status, collection: [:Sale, :Sold, :Pending, ] %></td></tr>
                        <tr>
                            <td class="featurelabel">Title</td>
                            <td><%= f.input :title %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Year</td>
                            <td><%= f.input :year %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Make</td>
                            <td><%= f.input :make %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Model</td>
                            <td><%= f.input :model, :class => "form-control" %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Body Style</td>
                            <td><%= f.input :body_style %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Engine</td>
                            <td><%= f.input :engine %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Transmission</td>
                            <td><%= f.input :transmission %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Drive Type</td>
                            <td><%= f.input :drive_type %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Vehicle Class</td>
                            <td><%= f.input :vehicle_class %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Doors </td>
                            <td><%= f.input :doors %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">MPG</td>
                            <td><%= f.input :mpg %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Trim</td>
                            <td><%= f.input :trim %></td>
                        </tr>
                        <tr>
                            <td class="featurelabel">Fuel Type</td>
                            <td> <%= f.input :fuel_type %>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class = "panel-footer">
                    <button  class="btn waves-effect waves-white" id= "update" style="width:100%!important; background-color:#5383D3; width:100%!important; font-weight:bold;"%>Submit Vehicle</button>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>

<style>
#vehicle_other_options{
display: none!important;
}
.featurelabel{
font-size: 1.5vmin!important;
width:15%!important;
}
.error, .error_notification{
color:red!important;
}
input{
margin-bottom: 0!important;
border-bottom: none!important;
}
td{
padding: 0!important;
}
#vehicle_description{
height:150px!important;
}
label{display: none!important;}
select{display: block!important;}
.col-lg-4 img{ width:100%;}
</style>
<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
<script>tinymce.init({ selector:'textarea' });</script>
<% else %>
<script type="text/javascript">window.location = "../../login";
</script>
<% end %>