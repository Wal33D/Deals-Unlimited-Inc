<div class ="container" style="margin-bottom:3.5vmin!important;" >
  <div class = "row"  >
    <div class = "panel panel-default z-depth-4" id="showpage">
      <div id ="headerinfo" class = "panel-heading" style ="padding-bottom:0!important; margin:0!important; background-color:#fff;" >
        <div class ="panel-title" style ="font-size:0.8rem; color:#5383D3; margin-top:-.5rem!important;">
          <div class ="row">
            <div class ="col-sm-8" style ="float:left;">
              <h5>
              <%= @vehicle.year %>
              <%= @vehicle.make %>
              <%= @vehicle.model %>
              </h5>
              <div id ="">
                <div class="row" style="margin:0!important;">
                  <label style="color:black">Price: </label>
                  $<%= number_with_delimiter(@vehicle.price, :delimiter => ',') %>.00
                </div>
                <div class="row" style="margin:0!important;">
                  <label style="color:black">Mileage: </label>
                  <%= number_with_delimiter(@vehicle.mileage, :delimiter => ',') %>
                </div>
                <div class="row" style="margin:0!important;">
                  <label style="color:black">VIN:</label>
                  <%= @vehicle.vin_num %>
                </div>
              </div>
            </div>
            <div class= "col-sm-4 " style="float:right;">
              <link rel="stylesheet" href="/print.css" type="text/css" media="print" >
              <a href="#" onclick="window.print();return false;"> <%=  image_tag 'print.png', :class=>"img-responsive", :style=>"max-height:6.5rem!important; margin:0.8rem 0 0 0!important; float:right;" %></a>
              <a href="http://www.carfax.com/VehicleHistory/p/Report.cfx?partner=WDB_0&vin=<%=@vehicle.vin_num%>">
                <%=  image_tag 'carfax.png', :class=>"img-responsive", :style=>"max-height:6.5rem!important; margin:0.8rem 0 0 0!important; float:right;" %>
              </a>
            </div>
          </div>
        </div>
      </div>
      <center>
      <div id ="mobileinfo" class = "panel-heading" style ="padding-bottom:0!important; margin:0!important; display:none; width:98%!important;" >
        <div class ="panel-title" style ="font-size:0.8rem; color:#5383D3; margin-top:-.5rem!important;">
          <div class ="row">
            <table class="table">
              <tr>
                <td  style="border:none!important;">
                  <h5>
                  <%= @vehicle.year %>
                  <%= @vehicle.make %>
                  <%= @vehicle.model %>
                  </h5>
                </td>
                <td>
                  <a href="http://www.carfax.com/VehicleHistory/p/Report.cfx?partner=WDB_0&vin=<%=@vehicle.vin_num%>">
                    <%=  image_tag 'carfax.png', :class=>"img-responsive", :style=>"max-height:4.5rem!important; margin:0.4rem 0 0 0!important; float:right;" %>
                  </a>
                </td>
              </tr>
              <tr>
                <td>
                  <label style="color:black">Price: </label>
                </td>
                <td>
                  $<%= number_with_delimiter(@vehicle.price, :delimiter => ',') %>.00
                </td>
              </tr>
              <tr>
                <td>
                  <label style="color:black">VIN:</label>
                </td>
                <td>
                  <%= @vehicle.vin_num %>
                </td>
              </tr>
              
            </table>
            
          </div>
        </div>
      </div>
      </center>
      <%= render 'showImages' %>
      <div class="panel-body">
        <%= render 'showInfo' %>
      </div>
  
    </div>
  </div>
  <div class="admin_edit_links" style="position:absolute; display:none; left:0; right:0; border:1px solid black; background-color:#eee;">
    <center>
    <%= link_to 'Edit', edit_vehicle_path(@vehicle), :class=>'btn blue btn-default' %> |
    <%= link_to 'Back', vehicles_path, :class=>'btn orange btn-default'  %>
    </center>
  </div>
</div>
<div class="container" style="width:100%!important; position:absolute;left:0; right:0; ">
  <div class="footer-vehicles" style="width:100%!important; position:absolute;left:0; right:0; padding:1rem;">
    <h4 style="">
    Deals
    <span style="color: rgb(83, 131, 211)!important; font: normal 36px 'Cookie', cursive!important; font-size:3.3rem; ">Unlimited,
      <span style="font-size:2rem; font-family: 'Black Ops One', cursive!important;color:white!important;"> Inc.
      </span>
    </span>
    </h4>
    <h5>269-324-4285</h5>
  </div>
</div>
