<div class="container">
  <div class="row">
    <div class="col-xs-1 col-hide">
    </div>
    <div class="col-xs-10" id="meetcol">
      <div class="panel panel-default z-depth-4" id="meet-panel" style="border-color:#ccc;">
        <div class="panel-heading panel-black" id="meet-heading">
          <div class="panel-title" style="color:white!important;" id="meet-title">
            <h4>Meet the Staff!
            </h4>
          </div>
        </div>
        <div class="panel-body">
          <% if admin_signed_in? %>
          <%= link_to 'Add  a Staff Member', new_meet_path, :class=>"btn green", :style=>"float:right!important;" %>
          <% end %>
          <% @meets.each do |meet| %>
          <div class="row">
            <div class="col-md-12">
              <div class="panel panel-default z-depth-2" >
                <div class="panel-heading">
                  <div class="panel-title">
                    <h5><%= meet.employee_name %>
                    </h5>
                  </div>
                </div>
                <div class="panel-body">
                  <div class="row">
                    <div class="col-md-4" id="headshot-thumb">
                      <%= image_tag meet.headshot_images[0] %>
                    </div>
                    <div class="col-md-2">
                      <p>Position:<%= meet.position %></p>
                      <p>Since:<%= meet.duration %></p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4">
                      <p><%= meet.about %></p>
                      <% if admin_signed_in? %>
                      <%= link_to 'Show', meet, :class=>"btn blue",:style=>"width:28%!important;" %>
                      <%= link_to 'Edit', edit_meet_path(meet), :class=>"btn orange",:style=>"width:28%!important;" %>
                      <%= link_to 'Destroy', meet, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn red",:style=>"width:41%!important;" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
        <div class="panel-footer panel-black">
        </div>
      </div>
    </div>
    <div class="col-xs-10 col-hide">
    </div>
  </div>
</div>
<style>
#meet-title, #meet-title h4{margin:0!important;}
#meet-heading{}
#headshot-thumb img{
max-width: 500px!important;
border-radius:100%!important;
}
@media (max-width: 600px) {

 #meetcol{
  width:100%!important;
  margin-top: 2vmin!important;
margin-left: 0!important;
margin-right:0!important;}

#meet-panel{
    width:100%!important;
  margin-top: 2vmin!important;
}
.col-hide{
  display: none!important;
}

}

</style>
