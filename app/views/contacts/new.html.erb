<div class="container" id="contact">
  <div class="row">
    <div class="col-md-8">
      <div class="panel panel-default hours z-depth-3" id="panel-contact">
        <div class="panel-heading "><h4 id="title-contact" style=" margin:0!important;">Contact us<a style="float:right;" href="tel:2693244285"id="blue">269-324-4285</a></h4>
      </div>
      <div class="panel-body ">
        <%= simple_form_for @contact, :html => {:class => '  form-horizontal' } do |f| %>
        <div>
          <%= f.input :name, :type=>"text", :class =>"span3",:style=>"color:#428bca!important;", :placeholder => "Name" ,:required => true %>
          <%= f.input :email, :class =>"span3", :style=>"color:#428bca!important;",:placeholder => "Email", :required => true %>
          <%= f.input :tel, :class =>"span3",:style=>"color:#428bca!important;", :placeholder => "Phone Number - (Optional)" %>
        </div>
        <%= f.input :message , as: :text, :required => true, :class =>"textarea", :id=>"contact_mess" %>
        <div class= "hidden">
          <%= f.input :nickname, :hint => 'Leave this field blank!' %>
        </div>
        
      </div>
      <div class="panel-footer" style="background:#292c2f !important;">
        <%= f.button :submit, 'Send message',:id=>"contact-btn" ,:class=> "btn btn-primary blue-btn" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <%= render"/layouts/application/info"%>
  </div>
</div>
</div>
<style>
 #contact_message{
height:400px;
 }
label{display:none!important;}
</style>