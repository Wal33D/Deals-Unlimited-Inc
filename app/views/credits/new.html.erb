<div class="container">
	<div class="panel panel-default" style="margin-top:1.5rem; box-shadow: 0 8px 10px 1px rgba(0, 0, 0, .14), 0 3px 14px 2px rgba(0, 0, 0, .12), 0 5px 5px -3px rgba(0, 0, 0, .2)
		">
		<div class="panel-heading" style="background-color:#292c2f; color:#eee;">
			<div class="panel-title">
				<h5 style="font-weight: bold;">Credit Application</h5>
			</div>
		</div>
		<div class="panel-body">
			<%= simple_form_for @credit, :html => {:class => '  form-horizontal' } do |f| %>
			
			<div class="row">
				<div class="col-lg-6">
					<div class="panel panel-default">
						<div class="panel-heading" style="background-color:#ddd">
							<div class="panel-title">
								Vehicle your trying to get credit for
							</div>
						</div>
						<div class="panel-body" style="background-color:#eff7ff">
							<div class="input-group" >
								<%= f.input :year ,:type=>"text",  :class=>"form-control", :placeholder=>"Year", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :make ,:type=>"text",  :class=>"form-control", :placeholder=>"Make", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :model ,:type=>"text",  :class=>"form-control", :placeholder=>"Model", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :vin ,:type=>"text",  :class=>"form-control", :placeholder=>"VIN", :required=>"true" %>
							</div>
						</div>
					</div>
					
					<div class="panel panel-default">
						<div class="panel-heading" style="background-color:#ddd">
							<div class="panel-title">
								Employment Information
							</div>
						</div>
						<div class="panel-body" style="background-color:#eff7ff">
							<div class="input-group" >
								<%= f.input :employer ,:type=>"text",  :class=>"form-control", :placeholder=>"Employer", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :employer_addr ,:type=>"text",  :class=>"form-control", :placeholder=>"Employer Address", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :employer_phone ,:type=>"text",  :class=>"form-control", :placeholder=>"Employer Phone Number", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :curr_pos ,:type=>"text",  :class=>"form-control", :placeholder=>"Current Position", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :time_at_job ,:type=>"text",  :class=>"form-control", :placeholder=>"Time on Job", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :income ,:type=>"text",  :class=>"form-control", :placeholder=>"Monthly Income Before Taxes", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :prev_employer ,:type=>"text",  :class=>"form-control", :placeholder=>"Previous Employer", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :prev_position ,:type=>"text",  :class=>"form-control", :placeholder=>"Previous Position", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :time_at_last_job  ,:type=>"text",  :class=>"form-control", :placeholder=>"Time at Last Job", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :other_income ,:type=>"text",  :class=>"form-control", :placeholder=>"Other Monthly Income", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :other_income_source ,:type=>"text",  :class=>"form-control", :placeholder=>"Other monthly income source", :required=>"true" %>
							</div>
						</div>
					</div>
					
				</div>
				<div class="col-lg-6">
					<div class="panel panel-default">
						<div class="panel-heading" style="background-color:#ddd">
							<div class="panel-title">
								Your Information
							</div>
						</div>
						<div class="panel-body" style="background-color:#eff7ff">
							<div class="input-group" >
								<%= f.input :name ,:type=>"text",  :class=>"form-control", :placeholder=>"First Name", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :middle_initial ,:type=>"text",  :class=>"form-control", :placeholder=>"Middle Initial", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :last_name ,:type=>"text",  :class=>"form-control", :placeholder=>"Last Name", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :street_address ,:type=>"text",  :class=>"form-control", :placeholder=>"Street Address", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :state ,:type=>"text",  :class=>"form-control", :placeholder=>"State", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :dob ,:type=>"text",  :class=>"form-control", :placeholder=>"Date of Birth", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :ssn ,:type=>"text",  :class=>"form-control", :placeholder=>"SSN", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :res_status ,:type=>"text",  :class=>"form-control", :placeholder=>"Rent / Own / Family", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :rent ,:type=>"text",  :class=>"form-control", :placeholder=>"Rent Per Month", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :phone ,:type=>"text",  :class=>"form-control", :placeholder=>"Phone Number", :required=>"true" %>
							</div>
							<div class="input-group" >
								<%= f.input :email, :class =>"span3", :placeholder => "email address", :required => true %>
							</div>
							<div class="input-group" >
								
								<%= f.input :prev_addr ,:type=>"text",  :class=>"form-control", :placeholder=>"Previous Address if less than 2 years at your current address", :required=>"true" %>
							</div>
							<div class="input-group" >
								
								<%= f.input :prev_addr_time ,:type=>"text",  :class=>"form-control", :placeholder=>"Time at previous address", :required=>"true" %>
							</div>
							<div class="input-group" >
								<p style="color:#111; font-size:1.3rem; display:inline-block!important;">Do you have a trade in?</p>
							</div>
							<div class="input-group" >
								<button class ="btn btn-default green"type="button" onclick="tradeIn_yes('true')" >Yes</button>
								<button class ="btn btn-default blue" type="button"  onclick="tradeIn_yes('false')">No</button>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row tradein" style="display:none;">
				<div class="col-lg-6">
					<div class="panel panel-default" >
						<div class="panel-heading" style="background-color:#ccc ">
							<div class="panel-title">
								Trade In Information
							</div>
						</div>
						
						<div class="panel-body" style="background-color:#e5f2ff;">
							<div class="input-group" >
								
								<%= f.input :tradein ,:type=>"text", :class=>"form-control", :placeholder=>"Do you have a Trade In" %>
							</div>
							<div class="input-group" >
								<%= f.input :transfer ,:type=>"text",  :class=>"form-control", :placeholder=>"Transferring a Plate or Need a New Plate?" %>
							</div>
							<div class="input-group" >
								<%= f.input :down_payment ,:type=>"text",  :class=>"form-control", :placeholder=>"Do you have a down Payment?" %>
							</div>
							<div class="input-group" >
								<%= f.input :howmuch ,:type=>"text",  :class=>"form-control", :placeholder=>"If Yes, How much" %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="panel panel-default" >
						<div class="panel-heading" style="background-color:#ccc;">
							<div class="panel-title">
								Required for Trade In
							</div>
						</div>
						<div class="panel-body" style="background-color:#e5f2ff">
							<div class="input-group" >
								<%= f.input :tradein_year ,:type=>"text",  :class=>"form-control", :placeholder=>"Year" %>
							</div>
							<div class="input-group" >
								<%= f.input :tradein_make ,:type=>"text",  :class=>"form-control", :placeholder=>"Make" %>
							</div>
							<div class="input-group" >
								<%= f.input :tradein_model ,:type=>"text",  :class=>"form-control", :placeholder=>"Model" %>
							</div>
							<div class="input-group" >
								<%= f.input :tradein_mileage ,:type=>"text",  :class=>"form-control", :placeholder=>"Mileage" %>
							</div>
							<div class="input-group" >
								<%= f.input :tradein_options ,:type=>"text",  :class=>"form-control textarea", :placeholder=>"List out any Vehicle Options here" %>
							</div>
							<div class="input-group" >
								<%= f.input :tradein_condition ,:type=>"text",  :class=>"form-control", :placeholder=>"Condition of Trade" %>
							</div>
							<div class="input-group" >
								<%= f.input :damage ,:type=>"text",  :class=>"form-control", :placeholder=>"Any Damage / Non-Working Items" %>
							</div>
							<div class="input-group" >
								<%= f.input :paidoff ,:type=>"text",  :class=>"form-control", :placeholder=>"Vehicle Paid Off?" %>
							</div>
							<div class="input-group" >
								<%= f.input :paidoff_est ,:type=>"text",  :class=>"form-control", :placeholder=>"If No, Estimated Payoff?" %>
							</div>
						</div>
					</div>
				</div>
				
			</div>
		</div>
		<div class="panel-footer" style="background-color:#292c2f;">
			<%= f.button :submit, 'Send message', :class=> "btn btn-primary contact-sub-btn blue-btn" %>
		</div>
		<% end %>
	</div>
</div>
<style>
input[type="submit"],
	.input, .radio_buttons, .radio, .optional, .credit_tradein{
		display: inline-block!important;
	}
.error{
	color:red!important;
}
.input-group{width:100%;}
.input-group *{
	visibility: visible!important;
	display:inline-block!important;
}
.input-group label{

	visibility: hidden!important;
	display:none!important;
}
label{
	display: none!important;
}
input::-webkit-input-placeholder {
color: rgba(77, 77, 77, 1) !important;
}
input:-moz-placeholder { /* Firefox 18- */
color: rgba(77, 77, 77, 1) !important;
}
input::-moz-placeholder {  /* Firefox 19+ */
color: rgba(77, 77, 77, 1) !important;
}
input:-ms-input-placeholder {
color: rgba(77, 77, 77, 1) !important;
}
input[type="submit"] {
-webkit-appearance: button;
width: 100%!important;
cursor: pointer;
margin: 0!important;
font-size:3vmin!important;
}
.box-shadow--2dp {
box-shadow: 0 2px 2px 0 rgba(0, 0, 0, .14), 0 3px 1px -2px rgba(0, 0, 0, .2), 0 1px 5px 0 rgba(0, 0, 0, .12)
}
.box-shadow--3dp {
box-shadow: 0 3px 4px 0 rgba(0, 0, 0, .14), 0 3px 3px -2px rgba(0, 0, 0, .2), 0 1px 8px 0 rgba(0, 0, 0, .12)
}
.box-shadow--4dp {
box-shadow: 0 4px 5px 0 rgba(0, 0, 0, .14), 0 1px 10px 0 rgba(0, 0, 0, .12), 0 2px 4px -1px rgba(0, 0, 0, .2)
}
.box-shadow--6dp {
box-shadow: 0 6px 10px 0 rgba(0, 0, 0, .14), 0 1px 18px 0 rgba(0, 0, 0, .12), 0 3px 5px -1px rgba(0, 0, 0, .2)
}
.box-shadow--8dp {
box-shadow: 0 8px 10px 1px rgba(0, 0, 0, .14), 0 3px 14px 2px rgba(0, 0, 0, .12), 0 5px 5px -3px rgba(0, 0, 0, .2)
}
.box-shadow--16dp {
box-shadow: 0 16px 24px 2px rgba(0, 0, 0, .14), 0 6px 30px 5px rgba(0, 0, 0, .12), 0 8px 10px -5px rgba(0, 0, 0, .2)
}
</style>
<script>
function tradeIn_yes(val){
	if (val=="true"){
		$( ".tradein" ).fadeIn(1000); 
		$( "#credit_tradein" ).val("Yes, I have a trade in.");
		$( "#credit_tradein" ).prop( "disabled", true );
	}else{
		$( ".tradein" ).fadeOut(1500); 
		$( "#credit_tradein" ).val("No, I do not have a trade in.");
		$( "#credit_tradein" ).prop( "disabled", false );
	}
}
</script>