color: rgba(77, 77, 77, 1) !important;
}
input:-ms-input-placeholder {
color: rgba(77, 77, 77, 1) !important;
}
input[type="submit"] {
-webkit-appearance: button;
width: 100%!important;
cursor: pointer;
margin: 0!important;
font-size:3vmin!important;
}
#credit-btn{
width:100%!important;
font-size:3vmin!important;
}
@media (max-width: 880px) {
}
