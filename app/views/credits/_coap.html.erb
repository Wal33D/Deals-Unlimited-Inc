<script>
function tradeIn(val){
	if (val=="true"){
		$( ".tradein" ).fadeIn(1000);
		$( "#credit_tradein" ).val("Yes, I have a trade in.");
		$( "#creditco-true" ).prop( "disabled", true );
		$( "#creditco-false").prop( "disabled", false );
	}else{
		$( ".tradein" ).fadeOut(1500);
		$( "#credit_tradein" ).val("No, I do not have a trade in.");
		$( "#creditco-true"  ).prop( "disabled", false );
		$( "#creditco-false").prop( "disabled", true );
	}
}
</script>