<div class="col-xs-6">
	<div class="panel panel-default">
		<div class="panel-heading" id="most_viewed_heading">
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#most_viewed_modal" style="float:right; background-color:white; color:black;" onclick="$('#closebtn-most').show()">
			<span class="glyphicon glyphicon-resize-full" aria-hidden="true" style="font-weight:bold" ></span>
			</button>
			<div class="panel-title">
				<h6>Most Viewed</h6>
			</div>
		</div>
		<div class="panel-body" style="padding:0 .5vmin 0 .5vmin; overflow-y:scroll;">
			<table class="table" style="padding:0; margin:0;">
				<tr>
					<% @popular_first.each do |vehicle| %>
					<td style="padding:0.2vmin;">
						<div class="panel panel-default veh_thumb" style="padding:0; margin:0!important;">
							<div class="panel-heading" style="padding:0; margin:0;">
								<label style="font-size:1.35vmin;">
									<%= vehicle.title.truncate(13)%>
								</label>
							</div>
							<div class="panel-body" style="padding:0; margin:0;">
								<% if vehicle.import == 'import' %>
								<%=  link_to image_tag(vehicle.image_1, :style=>"width:110px!important; height:67.9px!important;"),vehicle %>
								<% elsif ((vehicle.import == nil) && (vehicle.vehicle_images.present?))%>
								<%=  link_to image_tag(vehicle.vehicle_images[0].url, :style=>"width:110px!important; height:67.9px!important;"),vehicle  %>
								<% end %>
							</div>
							
							<div class="panel-footer" style="padding:0; margin:0;">
								<label>Views:   <%= vehicle.countclicks%></label>
							</div>
						</div>
					</td>
					<% end %>
				</tr>
				<tr>
					<% @popular_last.each do |vehicle| %>
					<td style="padding:0.2vmin;">
						<div class="panel panel-default veh_thumb" style="padding:0; margin:0!important;">
							<div class="panel-heading" style="padding:0; margin:0;">
								<label style="font-size:1.35vmin;">
									<%= vehicle.title.truncate(13)%>
								</label>
							</div>
							<div class="panel-body" style="padding:0; margin:0;">
								<% if vehicle.import == 'import' %>
								<%=  link_to image_tag(vehicle.image_1, :style=>"width:110px!important; height:67.9px!important;"),vehicle %>
								<% elsif ((vehicle.import == nil) && (vehicle.vehicle_images.present?))%>
								<%=  link_to image_tag(vehicle.vehicle_images[0].url, :style=>"width:110px!important; height:67.9px!important;"),vehicle  %>
								<% end %>
							</div>
							<div class="panel-footer" style="padding:0; margin:0;">
								<label>Views:   <%= vehicle.countclicks%></label>
							</div>
						</div>
					</td>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>